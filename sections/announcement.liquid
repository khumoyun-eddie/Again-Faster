{{ 'style.announcement.css' | asset_url | stylesheet_tag }}
<div class="announcement-bar">
  {% for announcement in section.blocks %}
    <a href="{{ announcement.settings.link }}" class="announcement">{{ announcement.settings.text }}</a>
  {% endfor %}
</div>
{% schema %}
{
  "name": "Announcement Bar",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "20% OFF Sitewide until 9/12",
          "label": "Announcement Label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Announcement Url"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}